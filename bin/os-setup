#!/bin/bash
usage() {
	echo "Usage: $(basename $0) [options]
Setup the operating system.

OPTIONS
-h  Help"
	exit $1
}

while getopts "h" V_ARG ; do
	case $V_ARG in
	h)	usage 1 ;;
	?)	usage 2 ;;
	esac
done

if [[ "$OSTYPE" != 'darwin14' ]]; then
	echo $OSTYPE': Not a Mac, exiting...'
	exit
fi

cd
sudo -H easy_install pip
sudo -H pip install -U virtualenvwrapper
# sudo -H pip3 install -U pip
# sudo -H pip3 install -U virtualenvwrapper
# sudo -H pip3 uninstall virtualenvwrapper
# sudo -H pip3 uninstall pip
